<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="hr_contract_view_form_specific" model="ir.ui.view">
    <field name="name">hr.contract.form.specific</field>
    <field name="model">hr.contract</field>
    <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
    <field name="arch" type="xml">

      <!-- Reasons-->
      <xpath expr="//group[@name='duration_group']" position="inside">
        <field name='start_reason'/>
        <field name='end_reason'/>
      </xpath>
      <!-- Activity Rate -->
      <xpath expr="//field[@name='wage']" position="after">
        <field name='activity_rate'/>
      </xpath>
      <!-- Salary & advantage tab-->
      <xpath expr="//group[@name='salary_and_advantages']" position="inside">
        <field name='coefficient'/>
        <field name='classification'/>
        <field name='employee_status_id'/>
      </xpath>

    </field>
  </record>

</odoo>
