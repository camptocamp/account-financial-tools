<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="stock_production_lot_form" model="ir.ui.view">
    <field name="name">stock production lot warranty</field>
    <field name="model">stock.production.lot</field>
    <field name="inherit_id" ref="stock.view_production_lot_form"/>
    <field name="arch" type="xml">
      <group name="main_group" position="inside">
        <group>
          <field name="date_supplier_warranty_start"/>
          <field name="supplier_warranty_duration"/>
          <field name="date_supplier_warranty_end"/>
          <field name="date_customer_warranty_start"/>
          <field name="customer_warranty_duration"/>
          <field name="date_customer_warranty_end"/>
        </group>
      </group>
    </field>
  </record>

  <record id="stock_production_lot_tree" model="ir.ui.view">
    <field name="name">stock production lot tree warranty</field>
    <field name="model">stock.production.lot</field>
    <field name="inherit_id" ref="stock.view_production_lot_tree"/>
    <field name="arch" type="xml">
      <field name="create_date" position="after">
          <field name="date_supplier_warranty_end"/>
          <field name="date_customer_warranty_end"/>
      </field>
    </field>
  </record>

  <record id="stock_production_lot_filter" model="ir.ui.view">
    <field name="name">stock production lot filter warranty</field>
    <field name="model">stock.production.lot</field>
    <field name="inherit_id" ref="stock.search_product_lot_filter"/>
    <field name="arch" type="xml">
      <field name="name" position="after">
        <filter name="customer_warranty"
                string="Under customer warranty"
                domain="[('date_customer_warranty_end','>',context_today())]"/>
        <filter name="supplier_warranty"
                string="Under supplier warranty"
                domain="[('date_supplier_warranty_end','>',context_today())]"/>
      </field>
    </field>
  </record>

</odoo>
