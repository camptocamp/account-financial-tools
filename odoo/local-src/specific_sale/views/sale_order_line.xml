<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_order_form_specific" model="ir.ui.view">
        <field name="name">sale.order.form.specific</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_total']" position="replace">
                <field name="amount_delivered" widget="monetary"/>
                <field name="amount_invoiced" widget="monetary"/>
                <field name="amount_delivered_currency"/>
                <field name="amount_invoiced_currency"/>
                <field name="amount_delivered_holding_currency"/>
                <field name="amount_invoiced_holding_currency"/>
                <field name="company_currency_id" invisible="True"/>
                <field name="holding_currency_id" invisible="True"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_line_action_window_specific" model="ir.actions.act_window">
        <field name="name">sale order line action specific</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot,tree</field>
    </record>

    <menuitem name="Sale lines"
              action="sale_order_line_action_window_specific"
              id="menu_report_sale_lines"
              parent="sales_team.menu_sale_report"
              sequence="99"/>

</odoo>
