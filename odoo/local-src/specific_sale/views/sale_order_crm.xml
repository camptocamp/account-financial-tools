<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_view_inherit_roctool" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale.roctool</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='opportunity_id']" position="after">
                <field name="project_zone_id"/>
                <field name="project_process_id"/>
                <field name="project_market_id"/>
            </xpath>
        </field>
    </record>
</odoo>