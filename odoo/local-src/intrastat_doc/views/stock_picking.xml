<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_stock_picking_form_export" model="ir.ui.view">
    <field name="name">view.stock.picking.form.export</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
      <xpath expr="//button[@name='button_scrap']" position="after">
        <button name="action_export_packing_list" string="Packing List"
                states="confirmed,assigned,done" type="object"/>
        <button name="action_export_commercial_invoice" string="Commercial Invoice"
                states="confirmed,assigned,done" type="object"/>
      </xpath>
    </field>
  </record>

</odoo>
